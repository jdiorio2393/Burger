<div class="main">
<h1>Eat Da Burger</h1>
<br>


<div id='EatBurger'>
    <h2>Burgers Available to Eat:</h2>
    
        {{#each theburgers}} {{#unless this.devoured}}
        
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-primary" type="submit">Devour it!</button>
            </form>

        
        {{/unless}} {{/each}}
    
</div>
<div id='devoured'>
    <h2>Burgers That Have <br>Been Devoured: </h2>

    <ul>
        {{#each theburgers}} {{#if this.devoured}}
        <li>
            
            {{this.id}}. {{this.burger_name}}
        
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>
</div>